{
  "name": "nextjs-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "bun lint:es && bun lint:style",
    "format": "prettier --write .",
    "lint:style": "stylelint 'src/**/styled.ts' 'src/**/*.tsx'",
    "lint-staged": {
      "*.{ts,tsx,js,jsx}": [
        "eslint --cache"
      ],
      "styled.ts": [
        "stylelint --cache"
      ]
    },
    "husky": {
      "hooks": {
        "pre-commit": "bun lint-staged && bun check:type"
      }
    }
  },
  "dependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "next": "14.2.15",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "postcss": "^8",
    "stylelint": "^16.9.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
